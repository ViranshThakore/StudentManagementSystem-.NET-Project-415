@model Student
@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-4">
    <h3 class="mb-4 text-center text-danger">Delete Student</h3>

    <div class="alert alert-danger">
        <strong>Warning!</strong> Are you sure you want to delete this student?
    </div>

    <div class="card shadow-sm p-4">
        <dl class="row">
            <dt class="col-sm-3">Roll Number</dt>
            <dd class="col-sm-9">@Model.RollNo</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="text-end">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
        </form>
    </div>
</div>
